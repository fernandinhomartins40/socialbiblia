# ==============================================
# CONFIGURAÇÕES CI/CD - BIBLICAI
# Backend: Express + Prisma + TypeScript + SQLite
# ==============================================

# Database Configuration (SQLite - Memory for tests)
DATABASE_URL=file:./data/ci.db

# API Configuration (Backend)
APP_URL_HOST=0.0.0.0
APP_URL_PORT=3000
SSL_ALLOW=false
API_PREFIX=api
API_JSON_LIMIT=5mb
API_EXT_URLENCODED=false
CORS_ALLOW_ORIGIN=*

# JWT Configuration
JWT_SECRET_USER=TestJWT_User_Secret_CI
JWT_SECRET_DEVICE=TestJWT_Device_Secret_CI
JWT_EXPIRED_IN=24h

# Security Configuration
BCRYPT_SALTROUNDS=4
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=15

# Debug Configuration (ENABLED FOR CI)
DEBUG_HTTP_REQUEST=false
DEBUG_HTTP_CONNECTION=false

# Service Ports
API_PORT=3000
WEB_PORT=3000
SQLITEADMIN_PORT=8080

# Email Configuration (Disabled for CI)
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_SERVICE=
EMAIL_OAUTH_CLIENT_ID=
EMAIL_OAUTH_CLIENT_SECRET=
EMAIL_OAUTH_REFRESH_TOKEN=

# CI Environment
NODE_ENV=test
TZ=America/Sao_Paulo 