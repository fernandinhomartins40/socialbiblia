# Environment Configuration for CI/CD Testing
# Biblicai Backend - Vincent Queimado Express + Prisma + TypeScript

# ========================================
# DATABASE CONFIGURATION (CI/CD)
# ========================================
DATABASE_URL="file:./data/test.db"

# ========================================
# API CONFIGURATION
# ========================================
# App Configuration
APP_URL_HOST=localhost
APP_URL_PORT=3000
SSL_ALLOW=false

# API Configuration
API_PREFIX=api
API_JSON_LIMIT=5mb
API_EXT_URLENCODED=false
CORS_ALLOW_ORIGIN=*

# ========================================
# JWT CONFIGURATION (CI/CD TESTING)
# ========================================
JWT_SECRET_USER=test_jwt_secret_user_ci_cd_2024
JWT_SECRET_DEVICE=test_jwt_secret_device_ci_cd_2024
JWT_EXPIRED_IN=24h

# ========================================
# SECURITY CONFIGURATION
# ========================================
BCRYPT_SALTROUNDS=4

# Rate Limiting (Relaxed for CI)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=15

# ========================================
# DEBUG CONFIGURATION
# ========================================
DEBUG_HTTP_REQUEST=false
DEBUG_HTTP_CONNECTION=false

# ========================================
# ENVIRONMENT
# ========================================
NODE_ENV=test 