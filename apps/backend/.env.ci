# Configurações do Servidor para CI/CD
PORT=3000
NODE_ENV=test
APP_NAME=plugbase-backend-ci

# Banco de Dados - usando variáveis do ambiente CI
DATABASE_URL="${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/plugbase_test?schema=public}"

# JWT - usando segredos do ambiente CI
JWT_SECRET="${JWT_SECRET:-ci-test-secret-key}"
JWT_REFRESH_SECRET="${JWT_REFRESH_SECRET:-ci-test-refresh-secret}"
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email - configuração básica para testes
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASS=test-password
FROM_EMAIL=noreply@test.com

# Rate Limiting - valores reduzidos para testes
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS - permitindo localhost para testes
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://test-host:3000

# Logging - nível mínimo para CI
LOG_LEVEL=warn
LOG_FILE=/tmp/app.log

# File Upload - diretório temporário
MAX_FILE_SIZE=1048576
UPLOAD_DIR=/tmp/uploads

# Redis - opcional para testes
REDIS_URL="${REDIS_URL:-redis://localhost:6379}"

# Sentry - desabilitado em CI
SENTRY_DSN=

# DataDog - desabilitado em CI
DATADOG_API_KEY=
