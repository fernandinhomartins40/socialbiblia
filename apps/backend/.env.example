# =========================================
# SERVIDOR E APLICAÇÃO
# =========================================
PORT=3000
NODE_ENV=development
APP_NAME=socialbiblia-backend
APP_VERSION=1.0.0

# =========================================
# BANCO DE DADOS
# =========================================
# Para desenvolvimento (SQLite)
DATABASE_URL=file:./data/dev.db

# Para produção (PostgreSQL) - descomente e configure
# DATABASE_URL=postgresql://username:password@localhost:5432/socialbiblia
# DATABASE_MAX_CONNECTIONS=10
# DATABASE_MIN_CONNECTIONS=2

# =========================================
# SEGURANÇA - JWT (OBRIGATÓRIO)
# =========================================
# IMPORTANTE: Gere secrets seguros em produção
# Use: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET_64_CHARS_MIN
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_DIFFERENT_STRONG_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =========================================
# CORS - CONFIGURAÇÃO POR AMBIENTE
# =========================================
# Desenvolvimento
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
# Produção - substitua pelos domínios reais
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# =========================================
# HELMET.JS - CONTENT SECURITY POLICY
# =========================================
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:
CSP_CONNECT_SRC='self'

# =========================================
# RATE LIMITING - PROTEÇÃO CONTRA ATAQUES
# =========================================
# Rate limiting global
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Rate limiting para login (mais restritivo)
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_REQUESTS=5

# Rate limiting por IP
IP_RATE_LIMIT_WINDOW_MS=3600000
IP_RATE_LIMIT_MAX_REQUESTS=1000

# =========================================
# EMAIL - SMTP PARA NOTIFICAÇÕES
# =========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@socialbiblia.com
FROM_NAME=SocialBiblia

# =========================================
# LOGS ESTRUTURADOS - WINSTON
# =========================================
# Nível de log (error, warn, info, debug)
LOG_LEVEL=debug
# Logs no console (desenvolvimento)
LOG_CONSOLE=true
# Logs em arquivos (produção)
LOG_FILES=false
# Tamanho máximo por arquivo
LOG_MAX_SIZE=10m
# Retenção de arquivos
LOG_MAX_FILES=30d
# Logs de debug detalhados
DEBUG_LOGS=false
# Diretório de logs
LOGS_DIR=./logs

# =========================================
# UPLOAD DE ARQUIVOS
# =========================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =========================================
# REDIS - CACHE E SESSÕES (OPCIONAL)
# =========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# =========================================
# MONITORAMENTO E OBSERVABILIDADE
# =========================================
# Sentry para error tracking
SENTRY_DSN=

# DataDog para APM
DATADOG_API_KEY=

# Prometheus métricas
PROMETHEUS_PORT=9464

# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# =========================================
# FEATURES FLAGS
# =========================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_CACHE=false
ENABLE_EMAIL_VERIFICATION=false

# =========================================
# SEGURANÇA ADICIONAL
# =========================================
# Session timeout em minutos
SESSION_TIMEOUT=60

# Bcrypt salt rounds
BCRYPT_SALT_ROUNDS=12

# CSRF Token secret
CSRF_SECRET=CHANGE_THIS_CSRF_SECRET_IN_PRODUCTION

# =========================================
# EXTERNAL APIs (SE NECESSÁRIO)
# =========================================
# API Keys para serviços externos
BIBLE_API_KEY=
TRANSLATION_API_KEY=

# =========================================
# DESENVOLVIMENTO
# =========================================
# Debug mode
DEBUG=socialbiblia:*

# Hot reload
HOT_RELOAD=true

# Seed database on startup
SEED_DATABASE=false
