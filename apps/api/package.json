{
    "name": "@socialbiblia/api",
    "version": "1.0.0",
    "description": "API backend para a aplicação Social Bíblia",
    "private": true,
    "main": "./build/src/index.js",
    "engines": {
        "node": ">=18.0",
        "npm": ">=9.0"
    },
    "scripts": {
        "dev": "nodemon",
        "prebuild": "rimraf ./build",
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "copyfiles": "copyfiles -u 1 public/**/*.* build/public/ && copyfiles -u 1 src/views/**/*.* build/src/ && copyfiles -u 1 src/utils/nodemailer/templates/**/*.* build/src/",
        "start": "npm run prebuild && npm run build && npm run copyfiles && cross-env NODE_ENV=production node build/src/app.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint --fix src/**/*.ts",
        "prettier:check": "prettier --check \"src/**/*.{js,ts}\"",
        "prettier:write": "prettier --write \"src/**/*.{js,ts}\"",
        "typecheck": "tsc --noEmit",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:badges": "npm run test && jest-coverage-badges",
        "prisma:format": "prisma format",
        "prisma:migrate": "prisma migrate dev --skip-seed",
        "prisma:migrate:deploy": "prisma migrate deploy",
        "prisma:generate": "prisma generate",
        "prisma:generate:watch": "prisma generate --watch",
        "prisma:seed": "ts-node prisma/seed/seed.ts",
        "prisma:reset": "prisma migrate reset",
        "prisma:reset:force": "prisma migrate reset -f",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/ejs": "^3.1.2",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.14.2",
        "@types/nodemailer": "^6.4.8",
        "@types/passport": "^1.0.12",
        "@types/passport-jwt": "^3.0.8",
        "@types/passport-local": "^1.0.35",
        "@types/sequelize": "^4.28.14",
        "@types/serve-favicon": "^2.5.3",
        "@types/supertest": "^2.0.12",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^9.0.1",
        "@types/xss-filters": "^0.0.27",
        "@types/yamljs": "^0.2.31",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "commitizen": "4.3.0",
        "copyfiles": "^2.4.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "init": "0.1.2",
        "jest": "^29.4.3",
        "lint-staged": "^13.1.4",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.4",
        "prisma": "^4.15.0",
        "rimraf": "^4.1.2",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.6",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@prisma/client": "^4.15.0",
        "@socialbiblia/shared": "workspace:*",
        "ansi-colors": "^4.1.3",
        "app-root-path": "^3.1.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "fast-glob": "^3.2.12",
        "googleapis": "^118.0.0",
        "helmet": "^6.0.1",
        "jest-coverage-badges": "^1.0.0",
        "jsonwebtoken": "^9.0.0",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.3",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.9.0",
        "pg-hstore": "^2.3.4",
        "postman-to-openapi": "^3.0.1",
        "rand-token": "^1.0.1",
        "serve-favicon": "^2.5.0",
        "swagger-ui-express": "^4.6.2",
        "uuid": "^9.0.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1",
        "xss-filters": "^1.2.7",
        "yamljs": "^0.3.0",
        "zod": "^3.21.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{ts, js}": [
            "npm run prisma:format",
            "npm run lint:fix",
            "npm run prettier:write"
        ],
        "**/*.{json, md}": [
            "npm run prettier:write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
