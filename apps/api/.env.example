# App Configuration
APP_URL_HOST=localhost
APP_URL_PORT=4000

# API Configuration
API_PREFIX=api
API_VERSION=v1

# CORS Configuration
CORS_ALLOW_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/socialbiblia_db

# JWT Secrets
JWT_SECRET_USER=your-jwt-secret-user-key-here
JWT_SECRET_ADMIN=your-jwt-secret-admin-key-here
JWT_SECRET_APP=your-jwt-secret-app-key-here
JWT_EXPIRED_IN=24h

# Bcrypt Configuration
BCRYPT_SALTROUNDS=10

# Rate Limiter Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Email Configuration (optional)
EMAIL_FROM=noreply@socialbiblia.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Debug Configuration
DEBUG_HTTP_REQUEST=true
DEBUG_HTTP_CONNECTION=false

# SSL Configuration (optional)
SSL_ALLOW=false
SSL_PRIVATE_KEY=
SSL_CERTIFICATE=