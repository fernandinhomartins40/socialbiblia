{
  "name": "biblicai-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "turbo run build",
    "build:web": "npm run build --workspace=apps/web",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:packages": "npm run build --workspace=packages/shared --workspace=packages/config --workspace=packages/ui",
    "build:all": "./tools/build/build-all.sh",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:dist": "rm -rf apps/*/dist packages/*/dist",
    "install-all": "npm install && npm install --workspaces",
    "deploy:local": "./tools/deploy/deploy-vps.sh",
    "deploy:remote": "./tools/deploy/deploy-remote.sh",
    "test:build": "./tools/deploy/test-build.sh"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "turbo": "^2.0.0",
    "tsup": "^8.0.1"
  }
}